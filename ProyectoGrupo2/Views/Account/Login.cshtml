@model ProyectoGrupo2.Models.UsuarioModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-header text-center bg-white border-0">
                <h4 class="mb-0 fw-semibold text-dark">
                    <i class="bi bi-box-arrow-in-right me-2 text-success"></i>
                    Iniciar sesión
                </h4>
            </div>

            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope text-success"></i>
                            </span>
                            <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Clave" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock text-success"></i>
                            </span>
                            <input asp-for="Clave" class="form-control" placeholder="Ingresa tu contraseña" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                <i class="bi bi-eye" id="iconEye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Entrar
                    </button>
                </form>
            </div>

            <div class="card-footer text-center bg-white border-0">
                <small class="text-muted">
                    ¿No tienes cuenta?
                    <a asp-controller="Account" asp-action="Register" class="text-success text-decoration-none">
                        Regístrate aquí
                    </a>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const toggleBtn = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('Clave');
        const iconEye = document.getElementById('iconEye');

        if (toggleBtn && passwordInput) {
            toggleBtn.addEventListener('click', () => {
                const isPassword = passwordInput.type === 'password';
                passwordInput.type = isPassword ? 'text' : 'password';
                iconEye.classList.toggle('bi-eye');
                iconEye.classList.toggle('bi-eye-slash');
            });
        }
    </script>
}