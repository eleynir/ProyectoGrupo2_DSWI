@{
    ViewData["Title"] = "Chat";
    var sala = ViewBag.Sala as string;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 text-center">
                    <h4 class="fw-semibold mb-0">
                        <i class="bi bi-chat-dots text-success me-2"></i>
                        Sala: <span class="text-success">@sala</span>
                    </h4>
                </div>

                <div class="card-body">
                    <div id="mensajes" class="chat-box mb-3"></div>

                    <div class="input-group mb-2">
                        <input type="text" id="usuario" class="form-control"
                               placeholder="Tu nombre" />
                    </div>

                    <div class="input-group">
                        <input type="text" id="mensaje" class="form-control"
                               placeholder="Escribe un mensaje..." />
                        <button id="btnEnviar" class="btn btn-success">
                            Enviar
                        </button>
                    </div>
                </div>

                <div class="card-footer text-muted small text-center">
                    Chat interno — sin persistencia
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .chat-box {
        height: 320px;
        overflow-y: auto;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .mensaje {
        margin-bottom: 10px;
        padding: 8px 12px;
        border-radius: 8px;
        max-width: 75%;
        font-size: 0.9rem;
    }

    .mensaje-otro {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
    }

    .mensaje-propio {
        background-color: #d1f3e0;
        margin-left: auto;
        text-align: right;
    }

    .usuario {
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const sala = "@sala";

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        const mensajesDiv = document.getElementById("mensajes");
        const usuarioInput = document.getElementById("usuario");
        const mensajeInput = document.getElementById("mensaje");
        const btnEnviar = document.getElementById("btnEnviar");

        connection.on("RecibirMensaje", function (usuario, mensaje) {
            const div = document.createElement("div");
            const usuarioActual = usuarioInput.value;

            div.classList.add("mensaje");
            div.classList.add(usuario === usuarioActual ? "mensaje-propio" : "mensaje-otro");

            div.innerHTML = `
                <div class="usuario">${usuario}</div>
                <div>${mensaje}</div>
            `;

            mensajesDiv.appendChild(div);
            mensajesDiv.scrollTop = mensajesDiv.scrollHeight;
        });

        connection.start().then(() => {
            connection.invoke("UnirseSala", sala);
        }).catch(err => console.error(err));

        btnEnviar.addEventListener("click", function () {
            const usuario = usuarioInput.value;
            const mensaje = mensajeInput.value;

            if (!usuario || !mensaje) return;

            connection.invoke("EnviarMensaje", sala, usuario, mensaje);
            mensajeInput.value = "";
        });
    </script>
}