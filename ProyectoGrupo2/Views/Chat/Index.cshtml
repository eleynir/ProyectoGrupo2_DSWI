@{
    ViewData["Title"] = "Chat";
    var sala = ViewBag.Sala as string;
}

<div class="container-fluid mt-3">
    <div class="row">

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header fw-semibold">
                    <i class="bi bi-people me-2"></i>
                    Usuarios en sala
                </div>

                <div class="card-body p-2">
                    <div class="mb-3">
                        <div class="text-success fw-semibold small mb-1">
                            📚 Personal de biblioteca
                        </div>
                        <ul id="listaPersonal" class="list-group list-group-flush small"></ul>
                    </div>

                    <div>
                        <div class="text-secondary fw-semibold small mb-1">
                            👤 Lectores
                        </div>
                        <ul id="listaLectores" class="list-group list-group-flush small"></ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm h-100">
                <div class="card-header fw-semibold">
                    <i class="bi bi-chat-dots me-2"></i>
                    Sala: <span class="text-success">@sala</span>
                </div>

                <div class="card-body d-flex flex-column">
                    <div id="mensajes" class="chat-box flex-grow-1 mb-3"></div>

                    <div class="input-group">
                        <input type="text" id="mensaje" class="form-control"
                               placeholder="Escribe un mensaje..." />
                        <button id="btnEnviar" class="btn btn-success">
                            Enviar
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .chat-box {
        overflow-y: auto;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .mensaje {
        margin-bottom: 10px;
        padding: 8px 12px;
        border-radius: 8px;
        max-width: 75%;
        font-size: 0.9rem;
    }

    .mensaje-otro {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
    }

    .mensaje-propio {
        background-color: #d1f3e0;
        margin-left: auto;
        text-align: right;
    }

    .usuario {
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const sala = "@sala";
        const usuario = "@Context.Session.GetString("NombreUsuario")";
        const rol = @Context.Session.GetInt32("IdRol");

        const mensajesDiv = document.getElementById("mensajes");
        const mensajeInput = document.getElementById("mensaje");
        const btnEnviar = document.getElementById("btnEnviar");

        const listaPersonal = document.getElementById("listaPersonal");
        const listaLectores = document.getElementById("listaLectores");

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.on("RecibirMensaje", function (usuarioMsg, mensaje) {
            const div = document.createElement("div");

            div.classList.add("mensaje");
            div.classList.add(usuarioMsg === usuario ? "mensaje-propio" : "mensaje-otro");

            div.innerHTML = `
                <div class="usuario">${usuarioMsg}</div>
                <div>${mensaje}</div>
            `;

            mensajesDiv.appendChild(div);
            mensajesDiv.scrollTop = mensajesDiv.scrollHeight;
        });

        connection.on("ActualizarUsuarios", function (usuarios) {
            listaPersonal.innerHTML = "";
            listaLectores.innerHTML = "";

            usuarios.forEach(u => {
                const li = document.createElement("li");
                li.className = "list-group-item py-1";
                li.textContent = u.nombre;

                if (u.rol === 2 || u.rol === 3)
                    listaPersonal.appendChild(li);
                else
                    listaLectores.appendChild(li);
            });
        });

        connection.start().then(() => {
            connection.invoke("UnirseSala", sala, usuario, rol);
        });

        btnEnviar.addEventListener("click", function () {
            if (!mensajeInput.value) return;

            connection.invoke("EnviarMensaje", sala, usuario, mensajeInput.value);
            mensajeInput.value = "";
        });
    </script>
}
