@{
    ViewData["Title"] = "Inicio";
    int? rol = ViewBag.IdRol;
}

<div class="container mt-5">
    @if (ViewBag.NombreUsuario != null)
    {
        @if (rol == 1)
        {
            <div class="alert alert-info">
                Bienvenido lector @ViewBag.NombreUsuario.
            </div>
        }
        @if (rol == 2)
        {
            <div class="alert alert-success">
                Bienvenido bibliotecario @ViewBag.NombreUsuario.
            </div>
        }
        @if (rol == 3)
        {
            <div class="alert alert-warning">
                Bienvenido administrador @ViewBag.NombreUsuario.
            </div>
        }
    }
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle border me-3 d-flex align-items-center justify-content-center"
                             style="width: 52px; height: 52px;">
                            <i class="bi bi-bookshelf fs-3"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-semibold">Sistema de Biblioteca</h3>
                            <small class="text-muted">
                                Panel principal para la gestión de libros, usuarios y préstamos.
                            </small>
                        </div>
                    </div>

                    <hr />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card border-0 h-100 bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-book fs-4 me-2 text-success"></i>
                                        <h6 class="mb-0">Catálogo de libros</h6>
                                    </div>
                                    <p class="mb-2 small text-muted">
                                        Consulta los títulos disponibles en la biblioteca.
                                    </p>
                                    <a asp-controller="Libros" asp-action="Index" class="btn btn-sm btn-outline-success w-100">
                                        Ver catálogo
                                    </a>
                                </div>
                            </div>
                        </div>

                        @if (rol == 3) 
                        {
                            <div class="col-md-4">
                                <div class="card border-0 h-100 bg-light">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-people fs-4 me-2 text-success"></i>
                                            <h6 class="mb-0">Usuarios</h6>
                                        </div>
                                        <p class="mb-2 small text-muted">
                                            Administración de lectores y cuentas registradas.
                                        </p>
                                        <button class="btn btn-sm btn-outline-success w-100">
                                            Gestionar usuarios
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-md-4">
                            <div class="card border-0 h-100 bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-journal-arrow-down fs-4 me-2 text-success"></i>
                                        <h6 class="mb-0">Préstamos</h6>
                                    </div>
                                    <p class="mb-2 small text-muted">
                                        Registro de préstamos y devoluciones de libros.
                                    </p>
                                    <button class="btn btn-sm btn-outline-success w-100" disabled>
                                        Ver préstamos
                                    </button>
                                </div>
                                <a asp-controller="Chat" asp-action="Salas"
                                       class="btn btn-sm btn-outline-success w-100">
                                        Ir al chat
                                    </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
