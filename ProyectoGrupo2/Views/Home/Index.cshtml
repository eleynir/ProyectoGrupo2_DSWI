@{
    ViewData["Title"] = "Inicio";
    int? rol = ViewBag.IdRol;
}

<div class="container mt-4">


    <div class="alert alert-light border mb-4">
        <strong>Bienvenido</strong>,
        @ViewBag.NombreUsuario
        <span class="text-muted">
            (@(rol == 1 ? "Lector" : rol == 2 ? "Bibliotecario" : "Administrador"))
        </span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <div class="mb-4 text-center">
                <i class="bi bi-bookshelf fs-1 text-success"></i>
                <h4 class="fw-semibold mt-2">Sistema de Biblioteca</h4>
                <p class="text-muted mb-0">
                    Panel principal del sistema
                </p>
            </div>

            <hr />

            <div class="row g-3">


                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-book fs-1 text-success mb-2"></i>
                            <h6 class="fw-semibold">Catálogo de libros</h6>
                            <p class="small text-muted">
                                Consulta los libros disponibles.
                            </p>
                            <a asp-controller="Libros" asp-action="Index"
                               class="btn btn-outline-success btn-sm w-100">
                                Ver catálogo
                            </a>
                        </div>
                    </div>
                </div>


                @if (rol == 2 || rol == 3)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="bi bi-journal-arrow-down fs-1 text-success mb-2"></i>
                                <h6 class="fw-semibold">Préstamos</h6>
                                <p class="small text-muted">
                                    Registrar y devolver préstamos.
                                </p>
                                <a asp-controller="Prestamos" asp-action="Index"
                                   class="btn btn-outline-success btn-sm w-100">
                                    Gestionar
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @if (rol == 3)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="bi bi-people fs-1 text-success mb-2"></i>
                                <h6 class="fw-semibold">Usuarios</h6>
                                <p class="small text-muted">
                                    Gestión de usuarios del sistema.
                                </p>
                                <a asp-controller="Usuarios" asp-action="Index"
                                   class="btn btn-outline-success btn-sm w-100">
                                    Gestionar
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @if (rol == 3)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="bi bi-gear fs-1 text-success mb-2"></i>
                                <h6 class="fw-semibold">Mantenimiento</h6>
                                <p class="small text-muted">
                                    Roles y configuraciones.
                                </p>
                                <a asp-controller="Roles" asp-action="Index"
                                   class="btn btn-outline-success btn-sm w-100">
                                    Administrar roles
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-chat-dots fs-1 text-success mb-2"></i>
                            <h6 class="fw-semibold">Chat de la biblioteca</h6>
                            <p class="small text-muted">
                                Comunicación en tiempo real.
                            </p>
                            <a asp-controller="Chat" asp-action="Salas"
                               class="btn btn-outline-success btn-sm w-100">
                                Entrar al chat
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
