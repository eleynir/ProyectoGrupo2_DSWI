@model ProyectoGrupo2.Models.LibroModel

@{
    ViewData["Title"] = "Registrar libro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 text-center">
                    <h4 class="mb-0 fw-semibold text-dark">
                        <i class="bi bi-book-half me-2 text-success"></i>
                        Registrar nuevo libro
                    </h4>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" placeholder="Título del libro" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Autor" class="form-label"></label>
                            <input asp-for="Autor" class="form-control" placeholder="Autor del libro" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ISBN" class="form-label"></label>
                            <input asp-for="ISBN" class="form-control" placeholder="Opcional" />
                            <small class="text-muted">
                                International Standard Book Number
                            </small>
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCategoria" class="form-label">Id de categoría</label>
                            <input asp-for="IdCategoria" class="form-control" type="number" />
                            <span asp-validation-for="IdCategoria" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AnioPublicacion" class="form-label"></label>
                                <input asp-for="AnioPublicacion" class="form-control" type="number" />
                                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Editorial" class="form-label"></label>
                                <input asp-for="Editorial" class="form-control" />
                                <span asp-validation-for="Editorial" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StockTotal" class="form-label"></label>
                                <input asp-for="StockTotal" class="form-control" type="number" min="0" />
                                <span asp-validation-for="StockTotal" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StockDisponible" class="form-label"></label>
                                <input asp-for="StockDisponible" class="form-control" type="number" min="0" />
                                <span asp-validation-for="StockDisponible" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i>
                            Guardar libro
                        </button>
                    </form>
                </div>

                <div class="card-footer bg-white border-0 text-center">
                    <a asp-action="Index" class="text-success text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Volver al catálogo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}