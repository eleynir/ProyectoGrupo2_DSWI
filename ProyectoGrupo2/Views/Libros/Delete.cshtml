@model ProyectoGrupo2.Models.LibroModel

@{
    ViewData["Title"] = "Eliminar libro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 text-center">
                    <h4 class="mb-0 fw-semibold text-danger">
                        <i class="bi bi-trash3 me-2"></i>
                        Eliminar libro
                    </h4>
                </div>

                <div class="card-body">
                    <p>¿Estás seguro que deseas eliminar el siguiente libro?</p>

                    <ul class="list-group mb-3">
                        <li class="list-group-item">
                            <strong>Título:</strong> @Model.Titulo
                        </li>
                        <li class="list-group-item">
                            <strong>Autor:</strong> @Model.Autor
                        </li>
                        <li class="list-group-item">
                            <strong>Editorial:</strong> @Model.Editorial
                        </li>
                        <li class="list-group-item">
                            <strong>Año:</strong> @Model.AnioPublicacion
                        </li>
                    </ul>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            Sí, eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
