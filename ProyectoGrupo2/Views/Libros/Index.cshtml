@model IEnumerable<ProyectoGrupo2.Models.LibroModel>

@{
    ViewData["Title"] = "Catálogo de libros";
}

@{
    int? rol = ViewBag.IdRol;
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">
            <i class="bi bi-book me-2 text-success"></i>
            Catálogo de libros
        </h3>
        @if (rol == 2 || rol == 3)
            {
                    <a asp-action="Create" class="btn btn-sm btn-success">
                        <i class="bi bi-plus-circle me-1"></i>  
                        Agregar libro
                    </a>

            }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay libros registrados en la biblioteca.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Autor</th>
                                <th>Editorial</th>
                                <th>Año</th>
                                <th class="text-center">Stock</th>
                                <th class="text-center">Disponible</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="width: 130px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var libro in Model)
                            {
                                <tr>
                                    <td>@libro.Titulo</td>
                                    <td>@libro.Autor</td>
                                    <td>@libro.Editorial</td>
                                    <td>@libro.AnioPublicacion</td>
                                    <td class="text-center">@libro.StockTotal</td>
                                    <td class="text-center">@libro.StockDisponible</td>
                                    <td class="text-center">
                                        @if (libro.Estado == "A")
                                        {
                                            <span class="badge bg-success-subtle text-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (rol == 1)
                                        {
                                        <a asp-action="Edit" asp-route-id="@libro.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@libro.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>