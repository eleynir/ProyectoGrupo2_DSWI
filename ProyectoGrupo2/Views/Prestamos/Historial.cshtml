@model List<PrestamoModel>

<h4 class="mb-3">
    <i class="bi bi-clock-history text-success me-2"></i>
    Historial de préstamos
</h4>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Retiro</th>
            <th>Dev. Estimada</th>
            <th>Dev. Real</th>
            <th>Estado</th>
            <th>Libros</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.FechaRetiro.ToShortDateString()</td>
                <td>@p.FechaDevolucionEstimada.ToShortDateString()</td>
                <td>@(p.FechaDevolucionReal?.ToShortDateString() ?? "-")</td>
                <td>
                    <span class="badge bg-secondary">@p.Estado</span>
                </td>
                <td>
                    <ul class="mb-0">
                        @foreach (var d in p.Detalles)
                        {
                            <li>@d.Libro.Titulo</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
