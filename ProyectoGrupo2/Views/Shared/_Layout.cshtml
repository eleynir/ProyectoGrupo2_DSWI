<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-semibold d-flex align-items-center gap-2"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-book-half fs-5"></i>
                Sistema de Biblioteca
            </a>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav align-items-center gap-3">

                    @if (Context.Session.GetString("NombreUsuario") != null)
                    {
                        <li class="nav-item text-white small">
                            <i class="bi bi-person-circle me-1"></i>
                            @Context.Session.GetString("NombreUsuario")
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white-50"
                               asp-controller="Home" asp-action="Index">
                                Inicio
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger fw-semibold"
                               asp-controller="Account"
                               asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i>
                                Cerrar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>
    <footer class="text-center text-muted small py-3 border-top">
        © 2025 · Biblioteca Lectum
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>