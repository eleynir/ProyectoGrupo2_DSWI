@model ProyectoGrupo2.Models.UsuarioModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="col-md-6 mx-auto">

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-pencil-square me-2 text-success"></i>
                    Editar Usuario
                </h5>
            </div>

            <div class="card-body">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" readonly />
                        <input type="hidden" asp-for="Nombre" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" readonly />
                        <input type="hidden" asp-for="Correo" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rol</label>
                        <select asp-for="IdRol"
                                asp-items="@(new SelectList(ViewBag.Roles, "IdRol", "NombreRol", Model.IdRol))"
                                class="form-select">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="A">Activo</option>
                            <option value="I">Inactivo</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            Guardar cambios
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>